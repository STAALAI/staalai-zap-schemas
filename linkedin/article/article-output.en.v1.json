{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ArticleOutput",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "maxLength": 120
    },
    "subtitle": {
      "type": "string",
      "maxLength": 200
    },
    "introduction": {
      "type": "string",
      "minLength": 1200,
      "maxLength": 2400
    },
    "body": {
      "type": "string",
      "minLength": 2000,
      "maxLength": 3600
    },
    "conclusion": {
      "type": "string",
      "minLength": 600,
      "maxLength": 1200
    },
    "hashtags": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 3,
      "maxItems": 10
    }
  },
  "required": ["title", "subtitle", "introduction", "body", "conclusion", "hashtags"]
}
