{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PersonalPostVariantsEN",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "post_a": { "type": "string", "minLength": 160, "maxLength": 360 },
    "post_b": { "type": "string", "minLength": 160, "maxLength": 360 },
    "hashtags": {
      "type": "array",
      "items": { "type": "string", "pattern": "^#[A-Za-z0-9_]{2,30}$" },
      "minItems": 3,
      "maxItems": 8
    }
  },
  "required": ["post_a", "post_b", "hashtags"]
}
